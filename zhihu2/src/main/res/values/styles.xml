<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/Indigo_colorPrimaryDark</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/top_color</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>
    <style name="MyActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">32dip</item>
        <item name="android:padding">20dip</item>
    </style>
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrHeaderBackground">@color/top_color</item>
        <!-- This is commented out as you should not set this unless you know what you're doing -->
        <item name="ptrHeaderHeight">?android:attr/actionBarSize</item>
        <item name="ptrHeaderTitleTextAppearance">@style/TextAppearance.Custom.PtrHeader.Title</item>
        <item name="ptrProgressBarStyle">inside</item>
        <item name="ptrProgressBarColor">@color/loadingbar_color</item>
        <item name="ptrPullText">@string/pull_loading</item>
        <item name="ptrRefreshingText">@string/ptrRefreshingText</item>
        <item name="ptrReleaseText">Let go if you want me to refresh!</item>
        <item name="ptrSmoothProgressBarStyle">@style/Widget.Custom.SmoothProgressBar.GPlusProgressBar</item>
    </style>


    <style name="Widget.Custom.SmoothProgressBar.GPlusProgressBar" parent="SmoothProgressBar">
        <item name="android:layout_height">5dp</item>
        <item name="android:indeterminate">true</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_color">@color/loadingbar_color</item>
        <item name="spb_speed">0.5</item>
        <item name="spb_stroke_width">100dp</item>
        <item name="spb_stroke_separator_length">3dp</item>
        <item name="spb_reversed">false</item>
        <item name="spb_mirror_mode">false</item>

    </style>


    <style name="TextAppearance.Custom.PtrHeader.Title"
        parent="android:TextAppearance.Large.Inverse">
        <item name="android:textSize">20dp</item>
    </style>


    <style name="PagerSlidingTabStrip1">
        <item name="pstsIndicatorColor">#E5E5E5</item>
        <item name="pstsDividerColor">@color/transpan</item>
        <item name="pstsIndicatorHeight">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="pstsTextColorSelected">@color/white</item>
        <item name="android:textColorPrimary">#8CC2EE</item>
        <!--<item name="textPrimaryColor">#8CC2EE</item>-->
        <!--<item name="android:textColor">@color/white</item>-->
        <!--<item name="pstsActivateTextColor">@color/white</item>-->
        <!--<item name="pstsDeactivateTextColor">#8CC2EE</item>-->
        <!--<item name="android:textColor">@color/btn</item>-->
    </style>


</resources>
